<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/bb">

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:format="%s"
        android:text="计时器"
        android:textSize="80dp"
        android:textColor="#00ff00"
        android:id="@+id/jishiqi"
        />
    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:format="%s"
        android:text="计时器"
        android:textSize="80dp"
        android:textColor="#00ff00"
        android:id="@+id/jishiqi2"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/b1"
    android:text="计时"
    android:background="#0000ff"
    android:textColor="#f82"
    android:layout_above="@+id/b21"
    android:layout_toStartOf="@+id/b2"
    android:layout_toLeftOf="@+id/b2" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b21"
        android:text="计时2"
        android:background="#0000ff"
        android:textColor="#f82"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/b22"
        android:layout_toStartOf="@+id/b22"
        android:layout_alignTop="@+id/b22"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b2"
        android:text="停止"
        android:textColor="#0f00f2"
        android:background="#0ff"
        android:layout_alignTop="@+id/b1"
        android:layout_toLeftOf="@+id/b3"
        android:layout_toStartOf="@+id/b3" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b22"
        android:text="stop2"
        android:textColor="#0f00f2"
        android:background="#0ff"
        android:layout_alignTop="@+id/b23"
        android:layout_toLeftOf="@+id/b23"
        android:layout_toStartOf="@+id/b23" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b3"
        android:text="清零"
        android:textColor="#0f0"
        android:background="#ff00ff"
        android:layout_alignTop="@+id/b2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b23"
        android:text="清零2"
        android:textColor="#0f0"
        android:background="#ff00ff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>


</RelativeLayout>
